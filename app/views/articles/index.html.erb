<h1 class="text-center mt-4">Articles listing page</h1>
<div class="container simple-bg">
  <% @articles.each do |article| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-body-tertiary rounde">
        <div class="card-header fst-italic">
          by author's name
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-info-emphasis text-decoration-none" %></h5>
          <p class="card-text"><%= truncate(article.description, length: 100) %></p>
          <div class="btn-group" role="group" aria-label="Buttons group">
            <div class="btn-group me-2" role="group" aria-label="First group">
            <%= link_to "View", article_path(article), class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-primary btn-sm" %>
            </div>
            
            
          </div>
          <%= button_to "Delete", article_path(article), class: "mt-4 btn btn-outline-primary btn-sm", method: :delete , onclick: "return confirm('Are you sure?')" %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago,
          edited <%= time_ago_in_words(article.updated_at) %> ago</small>  
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<p>
  <%= link_to "Add new article", new_article_path %>
</p>
